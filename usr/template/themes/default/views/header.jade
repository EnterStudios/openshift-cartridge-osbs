div.navbar.navbar-inverse.navbar-static-top
    div.navbar-inner
        a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.brand(href="/index.html")
            | OSBS
        if !loggedIn
            form.pull-right.navbar-form(method="post", action="/login")
                input.span2(type="text", name="username", placeholder="Username")
                input.span2(type="password", name="password", placeholder="Username")
                button.btn-success.btn(type="submit")
                    | Login
        else
            form.pull-right.navbar-form(method="link", action="/logout")
                button.btn-danger.btn(type="submit")
                    | LogOut
        div.seperator
        div.nav-collapse.collapse
            if loggedIn
                ul.nav
                    each item in index
                        if (item.active == true)
                            li.active
                                a(href="#{item.url}")
                                    | #{item.title}
                        else
                            li
                                a(href="#{item.url}")
                                    | #{item.title}
